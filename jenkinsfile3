pipeline {
    agent any

    tools {
        jdk 'JDK21'
        nodejs 'NodeJS'
    }

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        IMAGE_NAME = "ramesh0621/bookmyshowapp"
    }

    stages {

        stage('Clear workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                checkout scm
            }
        }

        stage('Set Environment Based on Branch') {
            steps {
                script {
                    if (env.BRANCH_NAME == "stage") {
                        env.NAMESPACE = "bookmyshow-stage"
                        env.IMAGE_TAG = "stage-${BUILD_NUMBER}"
                    }
                    else if (env.BRANCH_NAME == "main") {
                        env.NAMESPACE = "bookmyshow-prod"
                        env.IMAGE_TAG = "prod-${BUILD_NUMBER}"
                    }
                    else {
                        error("Unsupported branch for deployment")
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube-server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=BookMyShow \
                        -Dsonar.projectName=BookMyShow \
                        -Dsonar.sources=.
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    docker build --no-cache \
                    -t ${IMAGE_NAME}:${IMAGE_TAG} \
                    -f bookmyshow-app/Dockerfile bookmyshow-app
                """
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker_credential') {
                        sh """
                            docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage('Image Scan By Trivy') {
            steps {
                sh "trivy image ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }

        stage('Deploy to Kubernetes via Ansible') {
            steps {
                sh """
                    ansible-playbook ansible/deploy.yml \
                    -i localhost, \
                    -e namespace=${NAMESPACE} \
                    -e image_tag=${IMAGE_TAG}
                """
            }
        }
    }
}
