pipeline {
    agent any

    tools {
        jdk 'JDK21'
        nodejs 'NodeJS'
    }

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        IMAGE_NAME = "ramesh0621/bookmyshowapp"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set Environment') {
            steps {
                script {
                    if (env.BRANCH_NAME == "stage") {
                        env.NAMESPACE = "bookmyshow-stage"
                        env.IMAGE_TAG = "stage-${BUILD_NUMBER}"
                        echo "Deploying to STAGE"
                    }
                    else if (env.BRANCH_NAME == "main") {
                        env.NAMESPACE = "bookmyshow-prod"
                        env.IMAGE_TAG = "prod-${BUILD_NUMBER}"
                        echo "Deploying to PROD"
                    }
                    else {
                        echo "Branch not configured for deployment"
                        currentBuild.result = 'SUCCESS'
                        return
                    }
                }
            }
        }

        stage('SonarQube') {
            when {
                anyOf {
                    branch 'stage'
                    branch 'main'
                }
            }
            steps {
                withSonarQubeEnv('sonarqube-server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=BookMyShow \
                        -Dsonar.projectName=BookMyShow \
                        -Dsonar.sources=.
                    """
                }
            }
        }

        stage('Docker Build & Push') {
            when {
                anyOf {
                    branch 'stage'
                    branch 'main'
                }
            }
            steps {
                script {
                    sh """
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} \
                        -f bookmyshow-app/Dockerfile bookmyshow-app
                    """

                    withDockerRegistry(credentialsId: 'docker_credential') {
                        sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            when {
                anyOf {
                    branch 'stage'
                    branch 'main'
                }
            }
            steps {
                sh """
                    ansible-playbook ansible/deploy.yml \
                    -i localhost, \
                    -e namespace=${NAMESPACE} \
                    -e image_tag=${IMAGE_TAG}
                """
            }
        }
    }
}
